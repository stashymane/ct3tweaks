<Window x:Class="ct3tweaks.UpdateNotifier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ct3tweaks"
        mc:Ignorable="d"
        Title="UpdateNotifier" Height="160" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" WindowStyle="ToolWindow">
    <Grid>
        <Label Content="Update available!" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Segoe UI Semibold"/>
        <Label x:Name="VersionLabel" Content="Version" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="208,30,0,0"/>
        <Label Content="Open download page now?" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,59,0,0" FontSize="14"/>
        <Grid Margin="0,-25,0,0" VerticalAlignment="Bottom" Height="30">
            <Button x:Name="IgnoreButton" Content="Ignore" HorizontalAlignment="Right" Width="100" Click="IgnoreButton_Click"/>
            <Button x:Name="OpenButton" Content="Yes" HorizontalAlignment="Right" Width="100" Margin="0,0,100,0" Click="OpenButton_Click"/>
        </Grid>

    </Grid>
</Window>
