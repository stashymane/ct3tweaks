<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Remove="Assets\car.png" />
    <AvaloniaResource Remove="Views\MusicTab.xaml" />
    <AvaloniaResource Remove="Views\SettingsTab.xaml" />
    <AvaloniaResource Remove="Views\TweakTab.xaml" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Assets\car.png" />
    <None Remove="Views\MusicTab.xaml" />
    <None Remove="Views\SettingsTab.xaml" />
    <None Remove="Views\TweakTab.xaml" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="Assets\car.png" />
    <EmbeddedResource Include="Assets\ct3tweaks.ico" />
    <EmbeddedResource Include="Views\MusicTab.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.9.3" />
    <PackageReference Include="Avalonia.Desktop" Version="0.9.3" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.9.3" />
    <PackageReference Include="OpenTK" Version="4.0.0-pre2" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\TweakTab.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\SettingsTab.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\CT3Tweaks.Lib\CT3Tweaks.Lib.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Views\MusicTab.xaml.cs">
      <DependentUpon>MusicTab.xaml</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>
